
APP_ROOT=$1  
GETTER='.metadata.annotations.["tad.gitops.get/image"]'

FILES="$APP_ROOT/base/deployment.yaml  $APP_ROOT/overlays/development/deployment-patch.yaml"
for file in $FILES 
do
    KEY=$(yq "$GETTER" $file)
    if [  "$KEY" == "null" ]
    then     
        echo "$GETTER missing in $file"
    else   
        yq -i e "$KEY" $file
    fi
done